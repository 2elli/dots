#!/usr/bin/env bash
set -e
[ -n "$PYENV_DEBUG" ] && set -x

program="${0##*/}"

shorthand="$(sed 's/py3/3./g' <<< $program)"
pyenv_version="$(pyenv versions --bare | grep $shorthand | head -n 1)" 

if [[ "$pyenv_version" == "" ]]; then
    echo "Python version $shorthand not found."
    exit
fi

export PYENV_VERSION="$pyenv_version"
export PYENV_ROOT="/home/morgan/.pyenv"
exec "pyenv" exec python "$@"
